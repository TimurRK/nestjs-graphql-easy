{
  "name": "nestjs-graphql-template",
  "version": "0.0.1",
  "description": "",
  "author": "t.kosminov",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node --files -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "nodemon",
    "start:build": "NODE_ENV=development node dist/main.js",
    "start:beta": "NODE_ENV=beta node dist/main.js",
    "start:rc": "NODE_ENV=rc node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint-fix": "npm run lint -- --fix",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./src/database/database-ormconfig.cli",
    "db:migration:create": "npm run typeorm:cli -- migration:create -d src/database/migrations -n",
    "db:migration:run": "npm run typeorm:cli -- migration:run",
    "db:schema:sync": "npm run typeorm:cli -- schema:sync"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/graphql": "^9.1.2",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/typeorm": "^8.0.3",
    "apollo-server-express": "^3.6.2",
    "body-parser": "^1.19.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "dataloader": "^2.0.0",
    "graphql": "^15.5.1",
    "graphql-tools": "^8.2.0",
    "helmet": "^5.0.2",
    "pg": "^8.7.1",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.2",
    "typeorm": "^0.2.41",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.0",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.6",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^0.0.41",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/node": "^17.0.14",
    "@types/nodemon": "^1.19.1",
    "@types/pg": "^8.6.4",
    "@types/pluralize": "^0.0.29",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  }
}
