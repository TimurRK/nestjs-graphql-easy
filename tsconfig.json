{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "@helpers/*": ["./src/helpers/*"],
      "@errors": ["./src/errors/index"],
      "nestjs-graphql-easy": ["./lib/index"]
    }
  },
  "exclude": [
    ".git",
    ".vscode",
    "dist",
    "dist-lib",
    "node_modules"
  ]
}